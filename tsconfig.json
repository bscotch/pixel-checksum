{
  "include": ["*.mjs", "*.js", "*.d.ts", "*.ts"],
  "compileOnSave": false,
  "compilerOptions": {
    "noEmit": true,
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "types": ["node"],
    "useUnknownInCatchVariables": true
  }
}
